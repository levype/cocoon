<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="text-center">Photos</div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 col-md-offset-3">
      <div class="row">
        <div class="col-md-12">
          <div class="frame-info-liste">
            <ul>
              <li><%= @ad.space %>m²</li>
              <li><%= @ad.price %>€/month</li>
              <li><%= @ad.rooms %> rooms</li>
              <li><%= @ad.link %></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="frame-info-liste">
            <ul>
              <li><%= @ad.landlord_name %></li>
              <li><%= @ad.landlord_tel %></li>
              <li><%= @ad.landlord_email %></li>
            </ul>
          </div>
      </div>
    </div>
    </div>
    <div class="col-md-4">
      <div class="frame-info">
        <h3><%= @ad.title %></h3>
      </div>
      <div class="frame-info">
        <p><%= @ad.description %></p>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="text-center">Map</div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="btn-group btn-group-justified" role="group">
        <div class="btn-group" role="group">
          <button type="button" class="btn btn-danger"><i class="fa fa-heart"></i></button>
        </div>
        <div class="btn-group" role="group">
          <button type="button" class="btn btn-default"><i class="fa fa-trash"></i></button>
        </div>
      </div>
    </div>
  </div>
</div>
